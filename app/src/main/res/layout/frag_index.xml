<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/top_bg_n">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@mipmap/logo" />
        <TextView
            android:id="@+id/home_city"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="北京"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="@drawable/btn_activate_bg"
            android:drawableLeft="@mipmap/home_ico_city"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

        </View>
        <ImageView
            android:id="@+id/home_map"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@mipmap/home_icon_map"
            android:padding="10dp"
            android:background="@drawable/btn_activate_bg"/>
        <ImageView
            android:id="@+id/home_search"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@mipmap/home_icon_search"
            android:padding="10dp"
            android:background="@drawable/btn_activate_bg"/>
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="团购"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="24sp"/>
</LinearLayout>
